# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/wade
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=wade

# Redis
REDIS_URL=redis://localhost:6379/0

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
CELERY_BROKER_URL=amqp://guest:guest@localhost:5672/
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Oxigraph
OXIGRAPH_DIR=./data/oxigraph

# NVD API
NVD_API_KEY=your_nvd_api_key_here
NVD_API_URL=https://services.nvd.nist.gov/rest/json/cves/2.0

# EUVD API
EUVD_API_URL=https://euvdservices.enisa.europa.eu/api

# Application
APP_HOST=0.0.0.0
APP_PORT=8000
LOG_LEVEL=INFO

# Cache TTLs (seconds)
CACHE_TTL_CVE=86400
CACHE_TTL_EXPLOIT=3600
CACHE_TTL_SPARQL=300

# Performance
MAX_CONCURRENT_SUBSCRIBERS=50
SPARQL_TIMEOUT_SECONDS=10
MAX_INGESTION_BATCH_SIZE=100
